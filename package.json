{
    "name": "react-native-hooks-collection",
    "version": "0.1.8",
    "description": "A lightweight collection of React Native Hooks",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./core": {
            "import": "./dist/hooks/core/index.js",
            "types": "./dist/hooks/core/index.d.ts"
        },
        "./internet": {
            "import": "./dist/hooks/internet/index.js",
            "types": "./dist/hooks/internet/index.d.ts"
        }
    },
    "scripts": {
        "clean": "rm -rf dist",
        "build": "yarn clean && tsc",
        "list": "yarn pack && tar -tzf react-native-hooks-collection-v$npm_package_version.tgz",
        "start:clean": "cd src/playground && yarn start --reset-cache",
        "android:debug": "cd src/playground/android && ./gradlew assembleDebug",
        "android:release": "cd src/playground/android && ./gradlew assembleRelease",
        "local": "yarn build && yalc publish && cd src/playground && yalc add react-native-hooks-collection"
    },
    "keywords": [
        "react",
        "react-native",
        "hooks",
        "custom-hooks"
    ],
    "author": "Hamid Ali <hamidalig942@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/HamidAliSE/react-native-hooks-collection.git"
    },
    "bugs": {
        "url": "https://github.com/HamidAliSE/react-native-hooks-collection/issues"
    },
    "homepage": "https://github.com/HamidAliSE/react-native-hooks-collection#readme",
    "peerDependencies": {
        "react": ">=17.0.0",
        "react-native": ">=0.64.0",
        "@react-native-community/netinfo": ">=9.0.0"
    },
    "devDependencies": {
        "react": "^18.0.0",
        "react-native": "0.72.0",
        "@types/react": "^18.0.0",
        "@types/react-native": "^0.72.0",
        "typescript": "^5.9.2",
        "@react-native-community/netinfo": ">=9.0.0"
    }
}